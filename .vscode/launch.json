{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Iniciar Edge para depurar (puerto 8080)",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "userDataDir": "${workspaceFolder}/.vscode/edge-debug-data",
            "sourceMaps": true,
            "trace": true
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Iniciar Edge para depurar (puerto 80)",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "userDataDir": "${workspaceFolder}/.vscode/edge-debug-data",
            "sourceMaps": true,
            "trace": true
        },
        {
            "type": "pwa-msedge",
            "request": "attach",
            "name": "Conectar a Edge",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000
        }
    ]
}